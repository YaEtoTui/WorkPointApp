<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBF5"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/workpoint"
        android:layout_width="115.97dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="61dp"
        android:gravity="top"
        android:text="@string/workpoint"
        android:textAppearance="@style/workpoint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_2"
        android:layout_width="354dp"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="94.5dp"
        android:background="@drawable/line_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome_reg"
        android:layout_width="241dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="119dp"
        android:gravity="top"
        android:lineSpacingExtra="-2sp"
        android:text="@string/welcome_reg"
        android:textAppearance="@style/welcome_reg"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_7"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="@+id/rectangle_7"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/rectangle_7"
        android:layout_width="353dp"
        android:layout_height="421dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="41dp"
        android:layout_marginRight="29dp"
        android:textColor="#000000"
        android:background="@drawable/rectangle_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_reg" />

    <TextView
        android:id="@+id/send_text"
        android:layout_width="151dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="189dp"
        android:gravity="top"
        android:text="@string/send_text"
        android:textAppearance="@style/send_text"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_7"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="@+id/rectangle_7"
        app:layout_constraintTop_toTopOf="@+id/rectangle_7" />

    <TextView
        android:id="@+id/tvError1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:text="@string/errors_empty"
        android:textAppearance="@style/errors_empty"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/edFirstName"
        app:layout_constraintStart_toStartOf="@+id/edFirstName" />

    <EditText
        android:id="@+id/edFirstName"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/rectangle_4"
        android:gravity="center|left"
        android:hint="Введите имя"
        android:inputType="text|textPersonName"
        android:paddingLeft="11.05dp"
        android:textAppearance="@style/some_id"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/send_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/send_text"
        app:layout_constraintTop_toBottomOf="@+id/send_text" />

    <TextView
        android:id="@+id/tvError2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:text="@string/errors_empty"
        android:textAppearance="@style/errors_empty"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/edLastName"
        app:layout_constraintStart_toStartOf="@+id/edLastName" />

    <EditText
        android:id="@+id/edLastName"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/rectangle_4"
        android:gravity="center|left"
        android:paddingLeft="11.05dp"
        android:hint="Введите фамилию"
        android:fontFamily="@font/open_sans_light"
        android:inputType="text"
        android:textAppearance="@style/some_id"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/send_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/send_text"
        app:layout_constraintTop_toBottomOf="@+id/edFirstName" />

    <TextView
        android:id="@+id/tvError3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:text="@string/errors_empty"
        android:textAppearance="@style/errors_empty"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/editTextPhone"
        app:layout_constraintStart_toStartOf="@+id/editTextPhone" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/rectangle_4"
        android:gravity="center|left"
        android:paddingLeft="11.05dp"
        android:hint="Введите номер телефона"
        android:inputType="phone"
        android:fontFamily="@font/open_sans_light"
        android:textAppearance="@style/some_id"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/send_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edLastName"
        app:layout_constraintTop_toBottomOf="@+id/edLastName" />

    <TextView
        android:id="@+id/tvError4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:text="@string/errors_empty"
        android:textAppearance="@style/errors_empty"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/editTextPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextPassword" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/rectangle_4"
        android:gravity="center|left"
        android:paddingLeft="11.05dp"
        android:hint="Придумайте пароль"
        android:fontFamily="@font/open_sans_light"
        android:inputType="text"
        android:textAppearance="@style/some_id"
        android:textColor="#991F3B99"
        app:layout_constraintEnd_toEndOf="@+id/editTextPhone"
        app:layout_constraintStart_toStartOf="@+id/editTextPhone"
        app:layout_constraintTop_toBottomOf="@+id/editTextPhone" />

    <TextView
        android:id="@+id/choiceType"
        android:layout_width="128dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="22dp"
        android:fontFamily="@font/opensans_regular"
        android:gravity="top"
        android:text="Выбери тип аккаунта"
        android:textAppearance="@style/send_text"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_7"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="@+id/rectangle_7"
        app:layout_constraintTop_toTopOf="@+id/rectangle_7" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="18dp"
        android:checkedButton="@id/btRadio1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_7"
        app:layout_constraintHorizontal_bias="0.985"
        app:layout_constraintStart_toStartOf="@+id/rectangle_7"
        app:layout_constraintTop_toBottomOf="@+id/choiceType">

        <RadioButton
            android:id="@+id/btRadio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:backgroundTintMode="add"
            android:button="@drawable/radiobutton_selector"
            android:checked="true"
            android:fontFamily="@font/open_sans_light"
            android:text="Обычный пользователь"
            android:paddingLeft="4dp"
            android:textAppearance="@style/text_radio"
            android:theme="@style/MyRadioButton"
            app:layout_constraintEnd_toEndOf="@+id/choiceType"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="@+id/choiceType"
            app:layout_constraintTop_toBottomOf="@+id/choiceType" />

        <RadioButton
            android:id="@+id/btRadio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:button="@drawable/radiobutton_selector"
            android:fontFamily="@font/open_sans_light"
            android:paddingLeft="4dp"
            android:text="Бизнес-аккаунт"
            android:textAppearance="@style/text_radio"
            android:theme="@style/MyRadioButton"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="324dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/buisnes"
        android:layout_width="84dp"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/open_sans_light"
        android:gravity="top"
        android:lineSpacingExtra="-1sp"
        android:text="Для продвижения вашего бизнеса"
        android:textAppearance="@style/buisnes"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <Button
        android:id="@+id/btSignOut"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="55.99dp"
        android:layout_marginEnd="104dp"
        android:backgroundTint="@drawable/button_bg_color"
        android:textColor="@drawable/button_text_color"
        android:elevation="5dp"
        android:text="@string/sign_out"
        android:textAppearance="@style/sign_in"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>