<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBFBF5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="26dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/idHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/workpoint"
                    android:layout_width="115.97dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="61dp"
                    android:gravity="top"
                    android:text="@string/workpoint"
                    android:textAppearance="@style/workpoint"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.132"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/line_2"
                    android:layout_width="354dp"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="94.5dp"
                    android:background="@drawable/line_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="18dp"
                    app:layout_constraintBottom_toTopOf="@+id/workpoint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_geo_2" />

                <TextView
                    android:id="@+id/idTextCity"
                    android:layout_width="108dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center|left"
                    android:lineSpacingExtra="14sp"
                    android:text="Екатеринбург"
                    android:textAppearance="@style/text_geo"
                    android:translationY="-7.19sp"
                    app:layout_constraintBottom_toTopOf="@+id/workpoint"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.833" />

                <ImageView
                    android:id="@+id/imClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icon_bell_large"
                    app:layout_constraintBottom_toBottomOf="@+id/workpoint"
                    app:layout_constraintStart_toEndOf="@+id/workpoint"
                    app:layout_constraintTop_toTopOf="@+id/workpoint" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/idAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imClock"
                    app:layout_constraintStart_toEndOf="@+id/imClock"
                    app:layout_constraintTop_toTopOf="@+id/imClock">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imAvatar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ellipse_1"
                        android:src="@drawable/avatar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvNameAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Мария Иванова"
                        android:textColor="#CC1B1F3B"
                        android:textSize="10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imAvatar"
                        app:layout_constraintStart_toEndOf="@+id/imAvatar"
                        app:layout_constraintTop_toTopOf="@+id/imAvatar"
                        app:layout_constraintVertical_bias="0.363" />

                    <ImageView
                        android:id="@+id/imList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/icon_chevr_on_down"
                        app:layout_constraintBottom_toBottomOf="@+id/tvNameAccount"
                        app:layout_constraintStart_toEndOf="@+id/tvNameAccount"
                        app:layout_constraintTop_toTopOf="@+id/tvNameAccount"
                        app:layout_constraintVertical_bias="1.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/btBackToMainPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#00FFFFFF"
                    android:drawableLeft="@drawable/icon_left_large_2"
                    android:drawablePadding="3dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/back_main_page"
                    android:textColor="#A61B1F3B"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="@+id/idHeader"
                    app:layout_constraintTop_toBottomOf="@+id/line_2" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/idSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btBackToMainPage">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/idMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/idTvFavorites"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="18dp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="Избранное"
                            android:textColor="#000000"
                            android:textSize="10sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/idTvSettingsProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="Настройки профиля"
                            android:textColor="#000000"
                            android:textSize="10sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/idTvFavorites" />

                        <TextView
                            android:id="@+id/idSettingsPlaces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="Настройки мест"
                            android:textColor="#000000"
                            android:textSize="10sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/idTvSettingsProfile" />

                        <TextView
                            android:id="@+id/idPromotion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="Продвижение"
                            android:textColor="#000000"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/idSettingsPlaces"
                            app:layout_constraintVertical_bias="0.0" />

                        <View
                            android:id="@+id/idLineMenuFull"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/line_settings"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/idTvSettingsProfile"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/idLineFix"
                            android:layout_width="1dp"
                            android:layout_height="27dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/line_fix_settings"
                            app:layout_constraintBottom_toBottomOf="@+id/idPromotion"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/idPromotion" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tvPlacesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="15dp"
                        android:text="Продвижение"
                        android:fontFamily="@font/opensans_bold"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        app:layout_constraintStart_toEndOf="@+id/idMenu"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvPlacesDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="29dp"
                        android:layout_marginBottom="35dp"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="left"
                        android:text="В данном разделе вы можете посмотреть статусы всех ваших заявок на рекламу заведений"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tvPlacesText"
                        app:layout_constraintTop_toBottomOf="@+id/tvPlacesText" />




                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/idListAccountBusiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_account_common"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/idAccount"
                    app:layout_constraintTop_toBottomOf="@+id/idAccount">

                    <TextView
                        android:id="@+id/tvAddPlaceBusiness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="28dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Добавить место"
                        android:textColor="#494C62"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvFavoritesBusiness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Избранное"
                        android:textColor="#494C62"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@+id/tvAddPlaceBusiness"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/tvAddPlaceBusiness"
                        app:layout_constraintTop_toBottomOf="@+id/tvAddPlaceBusiness" />

                    <TextView
                        android:id="@+id/tvSettingsProfileBusiness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Настройки профиля"
                        android:textColor="#494C62"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@+id/tvFavoritesBusiness"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/tvFavoritesBusiness"
                        app:layout_constraintTop_toBottomOf="@+id/tvFavoritesBusiness" />

                    <TextView
                        android:id="@+id/tvSettingsPlacesBusiness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Настройки мест"
                        android:textColor="#494C62"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@+id/tvSettingsProfileBusiness"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/tvSettingsProfileBusiness"
                        app:layout_constraintTop_toBottomOf="@+id/tvSettingsProfileBusiness" />

                    <TextView
                        android:id="@+id/tvPromotionBusiness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Продвижение"
                        android:textColor="#494C62"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@+id/tvSettingsPlacesBusiness"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/tvSettingsPlacesBusiness"
                        app:layout_constraintTop_toBottomOf="@+id/tvSettingsPlacesBusiness" />

                    <TextView
                        android:id="@+id/tvlogOutBusiness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="23dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Выход"
                        android:textColor="#494C62"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/tvPromotionBusiness"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/tvPromotionBusiness"
                        app:layout_constraintTop_toBottomOf="@+id/tvPromotionBusiness"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tvBid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="28dp"
                    android:text="Все заявки"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/idSettings"
                    app:layout_constraintTop_toBottomOf="@+id/idSettings" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/idLayoutEdData"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/rectangle_edit_settings"
                    android:hint="Дата"
                    android:textColorHint="#661B1F3B"
                    app:hintTextAppearance="@style/settings_profile"
                    app:hintTextColor="#661B1F3B"
                    app:layout_constraintStart_toStartOf="@+id/tvBid"
                    app:layout_constraintTop_toBottomOf="@+id/tvBid">

                    <EditText
                        android:id="@+id/edTextData"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle_edit_settings_2"
                        android:contextClickable="false"
                        android:cursorVisible="false"
                        android:text="По умолчанию"
                        android:drawableRight="@drawable/icon_chevr_on_down"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/opensans_regular"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvErrorData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="@string/errors_empty"
                    android:visibility="invisible"
                    android:textAppearance="@style/errors_empty"
                    app:layout_constraintBottom_toBottomOf="@+id/idLayoutEdData"
                    app:layout_constraintStart_toStartOf="@+id/idLayoutEdData" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/idListData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="44dp"
                    android:background="@drawable/spinner_fon"
                    app:layout_constraintEnd_toEndOf="@+id/idLayoutEdData"
                    app:layout_constraintStart_toStartOf="@+id/idLayoutEdData"
                    app:layout_constraintTop_toTopOf="@+id/idLayoutEdData" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/idLayoutEdStatus"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="29dp"
                    android:background="@drawable/rectangle_edit_settings"
                    android:hint="Статус заявки"
                    android:textColorHint="#661B1F3B"
                    app:hintTextAppearance="@style/settings_profile"
                    app:hintTextColor="#661B1F3B"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/idLayoutEdData"
                    app:layout_constraintTop_toTopOf="@+id/idLayoutEdData">

                    <EditText
                        android:id="@+id/edTextStatus"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle_edit_settings_2"
                        android:contextClickable="false"
                        android:cursorVisible="false"
                        android:drawableRight="@drawable/icon_chevr_on_down"
                        android:focusable="false"
                        android:text="Все"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/opensans_regular"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/idListStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="44dp"
                    android:background="@drawable/spinner_fon"
                    app:layout_constraintEnd_toEndOf="@+id/idLayoutEdStatus"
                    app:layout_constraintStart_toStartOf="@+id/idLayoutEdStatus"
                    app:layout_constraintTop_toTopOf="@+id/idLayoutEdStatus" />

                <View
                    android:id="@+id/idListPromotion"
                    android:layout_width="0dp"
                    android:layout_height="258dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rectangle_list_business"
                    app:layout_constraintEnd_toEndOf="@+id/idLayoutEdStatus"
                    app:layout_constraintStart_toStartOf="@+id/idLayoutEdData"
                    app:layout_constraintTop_toBottomOf="@+id/tvErrorData" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:text="Название заведения"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/idListPromotion"
                    app:layout_constraintTop_toTopOf="@+id/idListPromotion" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:text="Дата подачи"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/tvName"
                    app:layout_constraintTop_toTopOf="@+id/tvName" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:text="Статус заявки"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/tvDate"
                    app:layout_constraintTop_toTopOf="@+id/tvName" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="26dp"
                    app:layout_constraintBottom_toBottomOf="@+id/idListPromotion"
                    app:layout_constraintEnd_toEndOf="@+id/idListPromotion"
                    app:layout_constraintStart_toStartOf="@+id/idListPromotion"
                    app:layout_constraintTop_toBottomOf="@+id/tvName"
                    tools:listitem="@layout/item_promotion_3_applications"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/idListDataConst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/spinner_fon_promotion"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/idLayoutEdData"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/idLayoutEdData"
                    app:layout_constraintTop_toTopOf="@+id/idLayoutEdData">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <RadioButton
                            android:id="@+id/btDateDefault"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="13dp"
                            android:button="@drawable/check_box_promotion"
                            android:checked="true"
                            android:fontFamily="@font/opensans_regular"
                            android:paddingLeft="7dp"
                            android:text="По умолчанию"
                            android:textAppearance="@style/text_radio"
                            android:textColor="#000000"
                            android:textSize="10sp"
                            android:theme="@style/MyRadioButton"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <RadioButton
                            android:id="@+id/btDateNew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="7dp"
                            android:button="@drawable/check_box_promotion"
                            android:fontFamily="@font/opensans_regular"
                            android:paddingLeft="7dp"
                            android:text="Сначала новые"
                            android:textAppearance="@style/text_radio"
                            android:textColor="#000000"
                            android:textSize="10sp"
                            android:theme="@style/MyRadioButton"
                            app:layout_constraintStart_toStartOf="@+id/btDateDefault"
                            app:layout_constraintTop_toBottomOf="@+id/btDateDefault" />

                        <RadioButton
                            android:id="@+id/btDateOld"
