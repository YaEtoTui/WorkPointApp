<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cView"
    android:layout_width="353dp"
    android:layout_height="249dp"
    android:layout_marginBottom="37dp"
    android:background="#FBFBF5"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectangle_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_fontlist_item">

        <TextView
            android:id="@+id/tvHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:textSize="13dp"
            android:textColor="#000000"
            android:fontFamily="@font/opensans_bold"
            android:text="Simple coffee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/idRectanglePhoto"
            android:layout_width="162dp"
            android:layout_height="139dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHello" />

        <ImageView
            android:id="@+id/imIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toEndOf="@+id/tvHello"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_tick_circle_2" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="291dp"
            android:fontFamily="@font/roboto_regular"
            android:text="4,6"
            android:textColor="#000000"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imIconStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvRating"
            app:layout_constraintStart_toEndOf="@+id/tvRating"
            app:layout_constraintTop_toTopOf="@+id/tvRating"
            app:srcCompat="@drawable/icon_star_2" />

        <TextView
            android:id="@+id/tvTextDesc"
            android:layout_width="154dp"
            android:layout_height="139dp"
            android:fontFamily="@font/open_sans_light"
            android:text="@string/lorem_ipsum"
            android:textSize="10dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/idRectanglePhoto"
            app:layout_constraintStart_toEndOf="@+id/idRectanglePhoto"
            app:layout_constraintTop_toTopOf="@+id/idRectanglePhoto"
            app:layout_constraintVertical_bias="0.54" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btShowInCarte"
            android:layout_width="129dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@drawable/button_bg_color_carte"
            android:elevation="10dp"
            android:text="Посмотреть на карте"
            android:textColor="@drawable/button_text_color_carte"
            android:textSize="8dp"
            app:cornerRadius="10dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="0.9dp"
            app:layout_constraintEnd_toEndOf="@+id/idRectanglePhoto"
            app:layout_constraintHorizontal_bias="0.212"
            app:layout_constraintStart_toStartOf="@+id/idRectanglePhoto"
            app:layout_constraintTop_toBottomOf="@+id/idRectanglePhoto" />

        <ImageView
            android:id="@+id/imCoeur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/btShowInCarte"
            app:layout_constraintStart_toEndOf="@+id/btShowInCarte"
            app:layout_constraintTop_toTopOf="@+id/btShowInCarte"
            app:srcCompat="@drawable/icon_heart" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@+id/tvTextDesc"
            app:layout_constraintTop_toBottomOf="@+id/idRectanglePhoto"
            app:srcCompat="@drawable/icon_location_list" />

        <TextView
            android:id="@+id/tvGeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Проспект Ленина, 46"
            android:fontFamily="@font/opensans_regular"
            android:textSize="10dp"
            android:textColor="#000000"
            android:layout_marginLeft="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:srcCompat="@drawable/icon_clock_list"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6.71dp"
            android:fontFamily="@font/opensans_regular"
            android:text="Ежедневно с 08:00 до 23:00"
            android:textColor="#000000"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>