                        android:paddingLeft="8dp"
                        android:text="На 7 дней"
                        android:textAppearance="@style/text_radio"
                        android:theme="@style/MyRadioButton" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:text="Даты действия рекламы"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="@+id/idRectangle1"
                    app:layout_constraintTop_toBottomOf="@+id/idRectangle1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/idLayoutEdStartDate"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rectangle_edit_settings"
                    android:hint="Дата начала"
                    android:textColorHint="#661B1F3B"
                    app:hintTextAppearance="@style/settings_profile"
                    app:hintTextColor="#661B1F3B"
                    app:layout_constraintEnd_toEndOf="@+id/tvDate"
                    app:layout_constraintStart_toStartOf="@+id/tvDate"
                    app:layout_constraintTop_toBottomOf="@+id/tvDate">

                    <EditText
                        android:id="@+id/edTextStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle_edit_settings_2"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:cursorVisible="false"
                        android:drawableRight="@drawable/icon_calendar_32"
                        android:fontFamily="@font/opensans_regular"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="9sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/idLayoutEdEndDate"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34dp"
                    android:background="@drawable/rectangle_edit_settings"
                    android:hint="Дата окончания"
                    android:textColorHint="#661B1F3B"
                    app:hintTextAppearance="@style/settings_profile"
                    app:hintTextColor="#661B1F3B"
                    app:layout_constraintBottom_toBottomOf="@+id/idLayoutEdStartDate"
                    app:layout_constraintStart_toEndOf="@+id/idLayoutEdStartDate"
                    app:layout_constraintTop_toTopOf="@+id/idLayoutEdStartDate">

                    <EditText
                        android:id="@+id/edTextEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle_edit_settings_2"
                        android:drawableRight="@drawable/icon_calendar_32"
                        android:fontFamily="@font/opensans_regular"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="9sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/idLayoutEdEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="41dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/rectangle_edit_settings"
                    android:hint="Электронная почта"
                    android:textColorHint="#661B1F3B"
                    app:hintTextAppearance="@style/settings_profile"
                    app:hintTextColor="#661B1F3B"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/idLayoutEdStartDate"
                    app:layout_constraintTop_toBottomOf="@+id/idLayoutEdStartDate">

                    <EditText
                        android:id="@+id/edTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle_edit_settings_2"
                        android:fontFamily="@font/opensans_regular"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="8sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvBanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:text="Прикрепите Ваш рекламный банер размера 970х300px в формате svg. "
                    android:textColor="#000000"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="@+id/tvCountDays"
                    app:layout_constraintTop_toBottomOf="@+id/idLayoutEdEmail" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imFile"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/tvBanner"
                    app:layout_constraintTop_toBottomOf="@+id/btLoadFile" />

                <Button
                    android:id="@+id/btLoadFile"
                    android:layout_width="163dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="11dp"
                    android:backgroundTint="@drawable/button_bg_color_filters"
                    android:drawableRight="@drawable/icon_clipboard"
                    android:elevation="20dp"
                    android:text="Прикрепить файл"
                    android:textAppearance="@style/text_filters"
                    android:textColor="#000000"
                    app:cornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="@+id/tvBanner"
                    app:layout_constraintTop_toBottomOf="@+id/tvBanner" />

                <Button
                    android:id="@+id/btSendApplication"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@drawable/button_bg_color_white"
                    android:elevation="5dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:stateListAnimator="@drawable/button_elevation"
                    android:text="Отправить заявку"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="10sp"
                    app:cornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="@+id/btLoadFile"
                    app:layout_constraintTop_toBottomOf="@+id/imFile" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</ScrollView>