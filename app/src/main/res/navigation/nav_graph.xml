<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainPageFragment">

    <fragment
        android:id="@+id/mainPageFragment"
        android:name="com.pp.coworkingapp.app.new_activities.MainPageFragment"
        android:animateLayoutChanges="true"
        tools:layout="@layout/fragment_main_page">

        <action
            android:id="@+id/action_mainPageFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.pp.coworkingapp.app.new_activities.AuthFragment"
        android:animateLayoutChanges="true"
        tools:layout="@layout/fragment_auth">

        <action
            android:id="@+id/action_authFragment_to_mainPageFragment"
            app:destination="@id/mainPageFragment" />
        <action
            android:id="@+id/action_authFragment_to_regPageFragment"
            app:destination="@id/regPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/regPageFragment"
        android:name="com.pp.coworkingapp.app.new_activities.RegFragment"
        android:animateLayoutChanges="true">

        <action
            android:id="@+id/action_regPageFragment_to_mainPageFragment"
            app:destination="@id/mainPageFragment" />
    </fragment>
</navigation>